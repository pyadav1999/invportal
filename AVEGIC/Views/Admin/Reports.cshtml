
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/js~/js/Reports.js"></script>
<style>
    .master-head {
        text-align: center;
    }

    .title {
        color: #8860D0;
    }

    .sub-title {
        color: white;
        font-size: 20px;
    }

    .report {
        background-color: #FFFFFF;
        width: 70%;
        height: 100%;
        margin: 7em auto;
        border-radius: 1.5em;
        box-shadow: 0px 11px 35px 2px rgba(0, 0, 0, 0.14);
    }

    .template {
        background-color: #FFFFFF;
        width: 70%;
        height: 100%;
        margin: 7em auto;
        border-radius: 0.5em;
        box-shadow: 0px 11px 35px 2px rgba(0, 0, 0, 0.14);
    }

    .row {
        margin-top: 10px !important;
    }

</style>
<div class="master-head">
    <h2 class="title">Reports</h2>
    <p class="sub-title">Create Your Reports</p>
</div>
<section class="report">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">Create Report</div>
                    <div class="card-body">
                        <form name="my-form">
                            <div class="form-group row">
                                <label for="agencyId" class="col-md-4 col-form-label text-md-right">Select Agency </label>
                                <div class="col-md-6">
                                    <select id="agencyId" class="form-control" name="agencyId">
                                        <option value="0" selected>Select &#9662;</option>
                                        @foreach (var item in ViewBag.Agency)
                                        {
                                            if (item.IsDeleted == false)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }

                                        }
                                    </select>
                                </div>
                            </div>
                             <div class="form-group row refId">
                                <label for="year" class="col-md-3 col-form-label text-md-right">Ref.No</label>
                                <div class="col-md-3">
                                    <input type="text" id="agencyAbb" disabled class="form-control" name="abbreviation">
                                </div>
                                <div class="col-md-3">
                                    <input type="text" id="Ref2"  class="form-control" name="Ref2">
                                </div>
                                <div class="col-md-3">
                                    <select id="yearId" class="form-control" name="yearId">
                                        <option selected value="0">Select &#9662;</option>
                                        @foreach(var item in ViewBag.Year)
                                        {
                                             if (item.IsDeleted == false)
                                            {
                                                <option value="@item.Id">@item.year</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row savebtn">
                                <div class="col-md-6">
                                    <button type="button" id="saveAgency" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                            <div class="form-group row update-btns">
                                <div class="col-md-6">
                                    <button type="button" id="updateAgency" class="btn btn-success">Update</button>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" id="deleteAgency" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


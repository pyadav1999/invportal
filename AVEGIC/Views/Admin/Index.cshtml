@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style type="text/css">

    .icon-bar {
        width: 100%; /* Full-width */
        background-color: #214761; /* Dark-grey background */
        overflow: auto; /* Overflow due to float */
    }

        .icon-bar a {
            float: left; /* Float links side by side */
            text-align: center; /* Center-align text */
            width: 20%; /* Equal width (5 icons with 20% width each = 100%) */
            padding: 10px 0; /* Some top and bottom padding */
            transition: all 0.3s ease; /* Add transition for hover effects */
            color: white; /* White text color */
            font-size: 27px;
            text-decoration: none; /* Increased font size */
        }

            .icon-bar a:hover {
                background-color: #f1f1f1; /* Add a hover color */
                color: #214761;
                text-decoration: none;
            }



    .sidebar {
        height: 100%;
        width: 260px;
        position: fixed;
        z-index: 1;
        left: 0;
        background-color: white;
        overflow-x: hidden;
        padding-top: 10px;
    }

        /* Style sidebar links */
        .sidebar a {
            padding: 15px 10px;
            text-decoration: none;
            font-size: 20px;
            color: #162ec9;
            display: block;
            border-bottom: 1px solid #e1e1e1;
        }

            /* Style links on mouse-over */
            .sidebar a:hover {
                background-color: #8EC5FC;
                background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%);
                color: #FFFFFF;
            }

    /* Style the main content */
    .main {
        margin-left: 160px; /* Same as the width of the sidenav */
        padding: 0px 10px;
    }

    /* Add media queries for small screens (when the height of the screen is less than 450px, add a smaller padding and font-size) */
    @@media screen and (max-height: 450px) {
        .sidebar {
            padding-top: 15px;
        }

            .sidebar a {
                font-size: 18px;
            }
    }

    .main-div {
        padding-top: 4% !important;
    }

    .content {
        margin: 2% 5% 2% 20%;
    }

    .block {
        background-color: #fff !important;
        padding: 10px;
        box-shadow: 5px 3px 4px 5px rgba(0, 0, 0, 0.4);
        background-image: url('../../../../Content/Images/olivier-miche-OZACaaUskhg-unsplash.jpg');
    }

    .block-content {
        padding: 15px 10px;
    }

    .admin-name {
        margin-left: 30px;
        margin-top: 10px;
    }

    .bg-gradient-danger {
        background: -webkit-gradient(linear, left top, right top, from(#ffbf96), to(#fe7096)) !important;
        background: linear-gradient(to right, #ffbf96, #fe7096) !important;
    }

    .bg-gradient-info {
        background: -webkit-gradient(linear, left top, right top, from(#90caf9), color-stop(99%, #047edf)) !important;
        background: linear-gradient(to right, #90caf9, #047edf 99%) !important;
    }

    .bg-gradient-success {
        background: -webkit-gradient(linear, left top, right top, from(#84d9d2), to(#07cdae)) !important;
        background: linear-gradient(to right, #84d9d2, #07cdae) !important;
    }
</style>
<div class="content">


    <div class="block mb-4">

        <div class="admin-name">
            <h3>Welcome,Admin</h3>
            <h4>Amit Verma</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="card text-white bg-gradient-danger mb-3" style="max-width: 18rem;">
                <div class="card-header">Total User</div>
                <div class="card-body">
                    <h5 class="card-title">30</h5>
                    <p class="card-text">Advocate,Investigator,Insurer</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white bg-gradient-info mb-3" style="max-width: 18rem;">
                <div class="card-header">Total Investigator</div>
                <div class="card-body">
                    <h5 class="card-title">30</h5>
                    <p class="card-text">Advocate,Investigator,Insurer</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white bg-gradient-success mb-3" style="max-width: 18rem;">
                <div class="card-header">Total Insurer</div>
                <div class="card-body">
                    <h5 class="card-title">30</h5>
                    <p class="card-text">Advocate,Investigator,Insurer</p>
                </div>
            </div>
        </div>
    </div>
   
</div>



